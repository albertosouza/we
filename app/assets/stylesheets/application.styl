// put your stylus code here
$bgColor = white
$footerBG = #f0f0f0

body
  background: $bgColor

.middle-container
  margin-top: 50px

.board-area
  height: 400px
  background-color: white

.list
  width: 300px
  margin: 5px
  padding: 5px
  border-radius: 8px
  background: none repeat scroll 0% 0% rgb(227, 227, 227)
  border-radius: 3px 3px 3px 3px
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.1), 0px 1px 0px rgba(0, 0, 0, 0.1)
  float: left
  margin: 0px 5px
  padding: 4px 3px 3px
  position: relative

.list-header
  position: relative
  min-height: 19px

.open-card-composer
  border-radius: 0px 0px 3px 3px
  color: rgb(147, 147, 147)
  display: block
  margin: 2px -3px -3px
  padding: 7px 10px
  position: relative
  text-decoration: none

.list-card
  background-color: rgb(255, 255, 255);
  border-width: 1px;
  border-style: solid
  border-color: rgb(185, 185, 185) rgb(185, 185, 185) rgb(147, 147, 147);
  -moz-border-top-colors: none
  -moz-border-right-colors: none
  -moz-border-bottom-colors: none
  -moz-border-left-colors: none
  border-image: none
  border-radius: 3px 3px 3px 3px
  cursor: pointer
  margin-bottom: 4px
  min-height: 18px
  padding: 6px 8px 1px
  position: relative
  transition-property: background, margin, opacity
  transition-duration: 0.2s, 0.1s, 0.2s
  transition-timing-function: ease-out
  z-index: 0

.image
  a.image-link
    height: 200px
    display: block
    background-color: $footerBG;
  .footer
    background-color: $footerBG
    padding: 10px
    text-align: right

.avatar-small
  width: 20px

.avatar
  width: 50px
  border: 2px solid #ccc

div.share-box-area
  border: 1px #ccc solid
  padding: 15px
  .post-content
    width: 95%
  .footer
    display: none

.share-box-area, .post
  -moz-box-shadow:  0px 0px 4px #CCC
  -webkit-box-shadow:  0px 0px 4px #CCC
  box-shadow:  0px 0px 4px #CCC

// POST

.posts
  margin-bottom: 20px

.post
  padding: 15px
  margin-top: 20px
  header
    .thumbnail
      float:left
    .avatar
      margin: 0px 10px 3px 0px
    h4
      margin: 0px

  div.content
    padding-bottom: 15px
    border-bottom: 1px solid #ccc
  div.footer
    margin: 10px 0px 15px 0px
    .actions
      margin-bottom: 10px
      text-align: right
    .comment-add
      .comment-add-buttom
        margin: 0px 10px 0px 35px
        padding: 5px
        background-color: $footerBG



// messenger
div.messenger-area
  bottom: 0px
  position: fixed
  right: 20px
  .messenger
    display: none
    border: 1px solid #ccc
    background-color: $bgColor
    .header
      background-color: #f4f4f4
      width: 240px
      padding 5px
      cursor: pointer
    .friendlist
      cursor: pointer
      margin-bottom: 15px
    .search-area
      margin: 5px 0px 0px 15px

div.messenger-off
  border: 1px solid #ccc
  background-color: $footerBG
  width: 240px
  padding 5px
  cursor: pointer
  .ui-icon-person
    float: left
    vertical-align:middle
  .text
    margin-left: 10px

