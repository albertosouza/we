$color = white

body
  background: $color
  

.middle-container
  margin-top: 50px

.board-area
  height: 400px
  background-color: white
  
.list
  width: 300px
  margin: 5px
  padding: 5px
  border-radius: 8px
  background: none repeat scroll 0% 0% rgb(227, 227, 227)
  border-radius: 3px 3px 3px 3px
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.1), 0px 1px 0px rgba(0, 0, 0, 0.1)
  float: left
  margin: 0px 5px
  padding: 4px 3px 3px
  position: relative

.list-header
  position: relative
  min-height: 19px

.open-card-composer  
  border-radius: 0px 0px 3px 3px
  color: rgb(147, 147, 147)
  display: block
  margin: 2px -3px -3px
  padding: 7px 10px
  position: relative
  text-decoration: none
  
.list-card
  background-color: rgb(255, 255, 255);
  border-width: 1px;
  border-style: solid
  border-color: rgb(185, 185, 185) rgb(185, 185, 185) rgb(147, 147, 147);
  -moz-border-top-colors: none
  -moz-border-right-colors: none
  -moz-border-bottom-colors: none
  -moz-border-left-colors: none
  border-image: none
  border-radius: 3px 3px 3px 3px
  cursor: pointer
  margin-bottom: 4px
  min-height: 18px
  padding: 6px 8px 1px
  position: relative
  transition-property: background, margin, opacity
  transition-duration: 0.2s, 0.1s, 0.2s
  transition-timing-function: ease-out
  z-index: 0
    