<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.boards() %>">boards</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">New board</a></li>
</ul>

<div class="page-header">
    <h1>New board</h1>
</div>

<% var form = formFor(board, {action: pathTo.boards(), method: 'POST', id: "board-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Create board', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.boards(), {class: 'btn'}) %>
</div>
<%- form.end() %>
