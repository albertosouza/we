<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.images() %>">images</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of image</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New image', pathTo.new_image(), {class: 'btn btn-primary'}) %></p>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (images.length > 0) { %>
            <% images.forEach(function (image) { %>
                <% include partials/image.ejs %>
            <% }); %>

        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No images were found.</strong>
            </p>
        <% } %>
    </div>
</div>