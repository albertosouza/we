<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.posts() %>">posts</a> <span class="divider">/</span></li>
</ul>

<div class="row">

    <div data-ng-controller="postsController"  class="posts span8">
        <% if(user){ %>
            <% include partials/share_box_form.ejs %>
        <% } %>

        <div data-ng-repeat="post in posts" data-ng-include="'angularjs/templates/post'" class="post span5">
            <!-- fallback for non js -->
            <% posts.forEach(function (post) { %>
                <% include partials/post.ejs %>
            <% }); %>
        </div>
    </div>

</div>
