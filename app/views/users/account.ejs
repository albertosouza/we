<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">User account</a></li>
</ul>

<div class="page-header">
    <h1>User account</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>displayName</th><td><%= user.displayName %></td></tr>

        <tr><th>email</th><td><%= user.email %></td></tr>

        <tr><th>password</th><td><%= user.password %></td></tr>

        <tr><th>bio</th><td><%= user.bio %></td></tr>

        <tr><th>createdAt</th><td><%= user.createdAt %></td></tr>

        <tr><th>activated</th><td><%= user.activated %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_user(user), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.user(user), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.users) %>
</div>
