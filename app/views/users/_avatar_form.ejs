<div id="user-avatar-form-area" class="show-dialog user-avatar-form-area">
    <div class="header">
        <h3>Select avatar</h3>
    </div>

    <div class="content">
    <% var form = formFor(user, {action: pathTo.user_avatar(user), method: 'PUT', id: "user-avatar-form", class: 'form-horizontal', enctype: 'multipart/form-data'}) %>
        <%- form.begin() %>

        <input name="file" class="js-upload-avatar" style="margin-bottom: 0;" tabindex="-1" accept="image/*;capture=camera" type="file">

        <div class="form-actions">
            <%- form.submit('<i class="icon-ok icon-white"></i> Save avatar', {class: 'btn btn-primary'}) %>

        </div>
    <%- form.end() %>
    </div>

    <div class="footer">
    </div>

</div>